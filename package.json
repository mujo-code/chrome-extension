{
  "name": "Mujo",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@jcblw/box": "^2.1.0",
    "@tweenjs/tween.js": "^17.4.0",
    "cra-append-sw": "^2.6.1",
    "error-stack-parser": "^2.0.2",
    "glamor": "^2.20.40",
    "idb": "^4.0.3",
    "prettier": "^1.14.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-modal": "^3.8.1",
    "react-scripts": "^3.0.1",
    "react-use-file-reader": "^1.0.0",
    "sourcemapped-stacktrace": "^1.1.9"
  },
  "scripts": {
    "serve": "serve",
    "start": "node scripts/watch.js",
    "build": "PUBLIC_URL=./ react-scripts build && npm run append:sw && npm run append:sm && npm run bundle",
    "append:sw": "cra-append-sw --mode replace --skip-compile ./public/service-worker.js",
    "append:sm": "node scripts/modify-source-maps.js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "fmt": "prettier '{src,public}/**/*.js' --write",
    "lint": "eslint '{src,public}/**/*.js'",
    "dist": "./scripts/dist.sh",
    "bundle:background": "rollup src/background.js --format iife --file build/background.js",
    "bundle:content": "rollup src/content.js --format iife --file build/content.js",
    "bundle": "npm run bundle:background && npm run bundle:content"
  },
  "browserslist": [
    "last 3 Chrome versions"
  ],
  "devDependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import-order-alphabetical": "0.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "gaze": "^1.1.3",
    "rollup": "^1.16.2",
    "serve": "^11.0.2"
  }
}
